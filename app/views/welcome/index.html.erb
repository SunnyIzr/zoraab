<div class="row">
  <div class="large-12 columns text-center">
    <h3>Kitter Dashboard<h3>
  </div>
</div>

<div class="row" style="height:1000px">
  <div class="large-4 columns text-center">
    <h5>Sign Ups Outstanding</h5>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Id</th>
          <th width='500'>Name</th>
          <th>Amt</th>
        </tr>
      </thead>
      <tbody>
        <% @os_signups.each do |signup| %>
          <tr>
            <td><%=signup.created_at.strftime('%m/%d')%></td>
            <td><a href="https://zoraab.chargify.com/subscriptions/<%=signup.cid%>" target="_blank"><%=signup.cid%></a></td>
            <td><%=signup.name%></td>
            <td><%=signup.amount%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="large-4 columns text-center">
    <h5>Renewals Outstanding</h5>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Id</th>
          <th width='500'>Name</th>
          <th>Amt</th>
        </tr>
      </thead>
      <tbody>
        <% @os_rens.each do |renewal| %>
          <tr>
            <td><%=renewal.created_at.strftime('%m/%d')%></td>
            <td><a href="https://zoraab.chargify.com/subscriptions/<%=renewal.cid%>" target="_blank"><%=renewal.cid%></a></td>
            <td><%=renewal.name%></td>
            <td><%=renewal.amount%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="large-4 columns text-center">
    <h5>Pending Orders</h5>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Order</th>
          <th>Name</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>


</div>

