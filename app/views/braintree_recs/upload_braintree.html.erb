<%= form_for @braintree_rec, :url => braintree_recs_path, :html => { :multipart => true } do |f| %>
<div class='disb-rec-interface'>
  <div class='row'>
    <div class='large-12 columns'>
      <div class='large-4 columns'>
        <%= label_tag(:start_date, 'Start Date') %>
        <%= f.date_field(:rec_date) %>
      </div>
      <div class='large-4 columns'>
        <%= label_tag(:transactions, 'Braintree Transactions') %>
        <%= f.file_field(:transactions) %>
      </div>
      <div class='large-4 columns'>
        <%= f.submit 'Upload Braintree Transactions', class: 'button' %>
      </div>
    </div>
  </div>
</div>
<% end %>