<div class="row">
  <div class="large-4 columns">
    <h4>Create New Invoice</h4>
  </div>
</div>
<%= form_for @invoice do |f| %>
  <div class="row">
    <div class="large-6 columns">
        <%= label_tag(:created_at, 'Date') %>
        <%= f.date_field(:created_at) %>
        
        <%= label_tag(:vendor, 'Vendor') %>
        <%= f.select(:vendor,Vendor.all.keys) %>
        
        <%= label_tag(:shipping, 'Shipping') %>
        <%= f.number_field(:shipping, value: 0.0, step: 'any', class: 'invoice_shipping') %>
        
        <%= label_tag(:shipping, 'Discount') %>
        <%= f.number_field(:discount, value: 0.0, step: 'any', class: 'invoice_discount') %>
    </div>
    <div class = 'large-6 columns'>
      <label> Total </label>
      <h3 id='invoice-total'> $0.00 <h3>
      <a id='calc-total' href="#" class='button'> Calculate </a>
      <%= submit_tag('Create Invoice', class: 'button') %> 
    </div>
  </div>

  <div class="row">
    <div class="large-10 columns">
      <table style="width:100%">
        <thead>
          <tr>
            <th width="300"> SKU </th>
            <th> Price </th>
            <th> Quantity </th>
            <th> Total </th>
            <th> </th>
            <th> </th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          <%= link_to_add_fields "Add LineItem", f, :line_items %>
          <% 3.times do %>
            <%= render partial: "line_item_fields" %>
          <% end %>
          <td>
        </td>
        </tbody>
      </table>
    </div>
  </div>
  
<% end %>
